<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A03A3B</item>
        <item name="colorAccent">#A03A3B</item>
        <item name="colorPrimaryVariant">#A03A3B</item>
        <item name="android:windowBackground">#ffffff</item>
        <item name="android:textColor">#333340</item>
        <item name="colorSecondary">#333333</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorError">#C5032B</item>
        <item name="colorOnPrimary">#A03A3B</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorOnError">#333340</item>
        <item name="colorOnBackground">#333340</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Prectito.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="TextAppearance.Prectito.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="TextAppearance.Prectito.Collapsed" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Prectito.TextInput.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColorHint">#DDDDDD</item>
        <item name="boxBackgroundColor">#853031</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="endIconTint">@color/white</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Widget.Prectito.TextInput.InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:drawablePadding">8dp</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>