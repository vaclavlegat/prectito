<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.Prectito.AppBarLayout" parent="">
        <item name="background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="Widget.Prectito.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Prectito.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="titleMarginStart">16dp</item>
    </style>

    <style name="ThemeOverlay.Prectito.Toolbar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="TextAppearance.Prectito.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Prectito.TextInput.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColorHint">#DDDDDD</item>
        <item name="boxBackgroundColor">@color/japaneseCarmine</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="endIconTint">@color/white</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Widget.Prectito.TextInput.InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:drawablePadding">8dp</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/whiteSemi</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

</resources>