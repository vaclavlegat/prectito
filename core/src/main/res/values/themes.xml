<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/japaneseCarmine</item>
        <item name="colorPrimaryVariant">@color/persianPlum</item>
        <item name="colorAccent">@color/aquarium</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/vampireBlack</item>

        <item name="colorSecondary">@color/persianPlum</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">#C5032B</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/vampireBlack</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/vampireBlack</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="toolbarStyle">@style/Widget.Prectito.Toolbar</item>
    </style>

    <style name="ScannerTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
</resources>