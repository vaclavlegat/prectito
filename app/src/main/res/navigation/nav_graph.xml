<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/homeFragment"
        android:name="cz.legat.prectito.ui.main.HomeFragment"
        android:label="Home"
        tools:layout="@layout/pt_home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment">
            <argument
                android:name="title"
                app:argType="string"
                android:defaultValue="@null" />
            <argument
                android:name="imageLink"
                app:argType="string"
                android:defaultValue="@null" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="cz.legat.prectito.ui.main.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/pt_detail_tabs_fragment" />

</navigation>